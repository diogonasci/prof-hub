{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning", // Reduz logs do framework para Warning
        "Microsoft.Hosting.Lifetime": "Information", // Controla logs de ciclo de vida
        "System": "Warning", // Reduz logs do sistema para Warning
        "Microsoft.AspNetCore": "Warning" // Reduz logs de requisições HTTP
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://profhub.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Prof.Hub.WebApi"
    }
  }
}
