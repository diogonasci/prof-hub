{
  "ConnectionStrings": {
    "Database": "Host=profhub-db;Port=5432;Database=profhub;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "prof.hub.cache:6379"
  },
  "ExternalServices": {
    "JokeApiBaseAddress": "https://official-joke-api.appspot.com/"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://bookify-seq:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Outbox": {
    "IntervalInSeconds": 10,
    "BatchSize": 10
  }
}
